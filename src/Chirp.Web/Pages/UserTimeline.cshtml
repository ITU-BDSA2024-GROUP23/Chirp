@page "/{user}"
@model Chirp.Web.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("user");
}

<div>
    <h2> @routeName's Timeline </h2>
    @if(User.Identity != null && User.Identity.IsAuthenticated)
    {
        <div class="cheepbox">
            <h3>Whats on your mind @(User.Identity.Name)?</h3>
            <form method="post">
            @Html.AntiForgeryToken()
                <input type="text" id="cheep" name="cheep" placeholder="Cheep something..."/>
                <input type="submit" value="Cheep"/>
            </form>
        </div>
    }
    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @cheep.Text
                        <small>&mdash; @cheep.TimeStamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
