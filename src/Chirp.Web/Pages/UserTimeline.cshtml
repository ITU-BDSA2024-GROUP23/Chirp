@page "/{user}"
@model Chirp.Web.Pages.UserTimelineModel
@{
    Layout = "Shared/_Layout";
    var routeName = HttpContext.GetRouteValue("user");
    ViewData["Title"] = $"{routeName} | Chirp";
}

<div>
    <h2> @routeName's profile </h2>
    <partial name="_ProfileInfo" model="Model" />
    <partial name="_CheepBox" model="Model.CheepBox" />
    <hr />
    <h3>Timeline</h2>
    
    @if (Model.Cheeps.Any())
    {
        <partial name="_CheepList" model="Model" />
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
