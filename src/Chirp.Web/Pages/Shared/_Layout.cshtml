<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="icon" type="image/png" href="~/favicon/favicon.ico">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<header>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="~/images/icon1.png" alt="Chirp Logo" width="45" height="45" class="d-inline-block align-text-top">
            </a>
            <div class="mx-auto">
                <a class="navbar-brand" href="/">Chirp!</a>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>

<body class="d-flex flex-column min-vh-100">
    <div class="container">
        @if (TempData["alert-success"] != null)
        {
            <div class="alert alert-success mt-3">
                @TempData["alert-success"]
            </div>
        }
        else if (TempData["alert-error"] != null)
        {
            <div class="alert alert-danger mt-3">
                @TempData["alert-error"]
            </div>
        }

        <main class="py-4">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer mt-auto py-3 bg-light text-center ">
        <small>Chirp &mdash; An ASP.NET Application</small>
    </footer>

    <!-- Scripts -->
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>
</html>
