@using Chirp.Web.Pages.Shared.Models
@model CheepBoxModel
@inject SignInManager<User> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <div class="cheepbox">
        <h3>Whats on your mind @User.Identity!.Name?</h3>
        <form method="post">
            @Html.AntiForgeryToken()
            <input style="float: left" type="text" asp-for="Message" placeholder="Cheep something..">
            <input type="submit" value="Share">
        </form>
    </div>
}
